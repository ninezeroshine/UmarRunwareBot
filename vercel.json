{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/generate", "dest": "api/index.js" },
    { "src": "/api/models", "dest": "api/index.js" },
    { "src": "/api/sizes", "dest": "api/index.js" },
    { "src": "/api/health", "dest": "api/index.js" },
    { "src": "/api/telegram", "dest": "api/index.js" },
    { "src": "/api/webhook", "dest": "api/index.js" },
    { "src": "/(.*)", "dest": "api/index.js" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 